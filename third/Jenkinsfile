pipeline {
  agent any
  stages {
    stage('Build') {
      steps {
         steps {
              checkout([$class: 'GitSCM', 
                branches: [[name: '*/main']],
                extensions: [
                    [$class: 'SparseCheckoutPaths', 
                    sparseCheckoutPaths:[[$class:'SparseCheckoutPath', path:'/jenkins/script']]]
                    ],
                userRemoteConfigs: [[url: 'https://github.com/bcalvessilva/firstnewmanexample']]])
              sh "ls -ltr"
          }
      }      
    }
  }
}
